lb config noauto --clean \
	--bootappend-live "homepage=http://www.commonde.org/start nopersistant quickreboot console=tty0 console=ttyS0,38400n8" noroot quiet \
	--apt-recommends false \
	-k 486 \
	-a i386 \
	-f standard \
	--syslinux-timeout 1 \
	--debian-installer false \
	--username commonde \
	--hostname commonde \
	--archive-areas "main contrib non-free" \
	--iso-publisher "commonde: http://commonde.org/; support@commonde.org" \
	--iso-volume "CommonDE $(date +%Y%m%d-%H:%M)" \
	--iso-application "CommonDE" \
	--memtest none \
	-m http://ftp.us.debian.org/debian \
	${@}
